<div class="p-5 col-3">
<h1>New bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment, placeholder:'Your comment' %>
    <%= f.submit "Save bookmark", class: "btn btn-success mb-3" %>
  <% end %>

<div>
  <%= link_to "Back to lists", lists_path(@list), class:"text-decoration-none btn btn-primary" %>
</div>
</div>
