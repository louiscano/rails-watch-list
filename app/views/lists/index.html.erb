<div class="p-5">
<h1>Lists</h1>
<div class="d-flex">
<% @lists.each do |list| %>
<div class="card m-3 rounded-3 text-center" style="width: 18rem;">
<% if list.photo.attached? %>
  <div class=""
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
    <%= list.name %>
  </div>
  <% end %>
  <div class="card-body">
    <%= link_to "Show this list", list_path(list), class:"text-decoration-none btn btn-primary ms-3" %>
  </div>
</div>
 <% end %>
 </div>
<%= link_to "New list", new_list_path, class:"text-decoration-none btn btn-success" %>
</div>
