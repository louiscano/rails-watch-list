<div class="p-5">
  <h3><%= @list.name %></h3>
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card mb-3" style="width: 18rem;">
  <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <p class="card-text"><%= bookmark.movie.overview %></p>
    <p class="card-text fw-lighter bg-light fst-italic"><%= bookmark.comment %></p>
    <%= link_to '<i class="fa-solid fa-trash-can ps-2"></i>'.html_safe,
    [@list, bookmark],
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
  <% end %>

<div>
  <%= link_to "Add to bookmarks", new_list_bookmark_path(@list), class:"text-decoration-none btn btn-danger" %>
  <%= link_to "Back to lists", lists_path, class:"text-decoration-none btn btn-primary" %>
</div>
</div>
